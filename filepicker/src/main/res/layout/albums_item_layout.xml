<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="@dimen/_6sdp"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
>
    <ImageView
            android:background="@android:color/white"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:id="@+id/albumsItem_icon"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"/>
    <ImageView
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            android:scaleType="centerCrop"
            android:padding="@dimen/_8sdp"
            android:background="#3C000000"
            android:id="@+id/albumsItem_iconPlay"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"/>
    <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/albumsItem_name"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_toEndOf="@+id/albumsItem_icon"
            android:layout_toStartOf="@+id/albumsItem_radio"
            android:layout_width="match_parent"
            android:text="Album name"
            android:textSize="@dimen/_16ssp"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_below="@+id/albumsItem_name"
            android:id="@+id/albumsItem_count"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_toEndOf="@+id/albumsItem_icon"
            android:layout_toStartOf="@+id/albumsItem_radio"
            android:layout_width="match_parent"
            android:text="0"
            android:textSize="@dimen/_12ssp"
            android:layout_height="wrap_content"/>
    <RadioButton
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/albumsItem_radio"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_12sdp"
            android:buttonTint="@color/colorPrimary"
            android:layout_margin="@dimen/_6sdp"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"/>
</RelativeLayout>