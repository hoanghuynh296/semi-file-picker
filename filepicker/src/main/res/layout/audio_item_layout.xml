<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/white_selectable_background"
        android:id="@+id/audioItem_root"
        android:layout_height="wrap_content"
>
    <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_music_note_black_24dp"
            android:scaleType="centerCrop"
            android:id="@+id/audioItem_audio"
            android:padding="@dimen/_12sdp"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"/>

    <vn.semicolon.base.widget.customview.StateTextView
            android:layout_toEndOf="@+id/audioItem_audio"
            android:text="1"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:id="@+id/audioItem_name"
            android:layout_toStartOf="@+id/audioItem_selectPanel"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14ssp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <FrameLayout
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/audioItem_selectPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <CheckBox
                android:id="@+id/audioItem_checkbox"
                android:padding="@dimen/_12sdp"
                android:buttonTint="@color/colorPrimary"
                android:layout_margin="@dimen/_6sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>
        <RadioButton
                android:buttonTint="@color/colorPrimary"
                android:id="@+id/audioItem_radio"
                android:padding="@dimen/_12sdp"
                android:layout_margin="@dimen/_6sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>
    </FrameLayout>

</RelativeLayout>